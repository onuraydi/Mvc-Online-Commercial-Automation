@model MvcOnlineTicariOtomasyon.Models.Siniflar.dinamikFatura
@{
    ViewBag.Title = "dinamikFatura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />

<div class="panel panel-default">

    <div class="panel-heading">

        <div class="row">

            <h2 class="panel-title pull-left" style="margin-left:10px;">

                <strong>Fatura & Fatura Kalem işlemleri</strong>

            </h2>

            <button style="margin-right:10px;width:200px;margin-left:25px;margin-bottom:30px;margin-top:30px" class="btn btn-primary pull-right" data-bs-toggle="modal" data-bs-target="#newOrderModal">Yeni Fatura</button>
            <!-- pop up için çalışan buton örneği-->
        </div>

    </div>


    @foreach (var item in Model.fatura)

    {

        <div class="panel-body">

            <table class="table table-striped table-responsive">

                <tbody>

                    <tr>

                        <td>Sıra No : @item.FaturaSeriNo @item.FaturaSıraNo </td>

                        <td>Tarih : @item.FaturaTarih.ToShortDateString() </td>

                        <td>Saat : @item.FaturaTarih.ToShortTimeString() </td>

                        <td>Vergi Dairesi : @item.VergiDairesi</td>

                        <td>Teslim Eden : @item.TeslimEden</td>

                        <td>Teslim Alan : @item.TeslimAlan</td>

                    </tr>

                    <tr>

                        <td colspan="3">

                            <table class="table table-bordered">

                                <tbody>

                                    <tr>

                                        <th>Açıklama</th>

                                        <th>Miktar</th>

                                        <th>Birim Fiyat</th>



                                    </tr>

                                    @{

                                        var totalBill = 0;

                                    }

                                    @foreach (var order in item.FaturaKalems)

                                    {

                                        <tr>

                                            <td>@order.Aciklama</td>

                                            <td>@order.Miktar</td>

                                            <td>@order.BirimFiyat</td>



                                        </tr>

                                        totalBill = totalBill + @Convert.ToInt32(order.Tutar);

                                    }

                                </tbody>

                            </table>

                            <span class="pull-right" style="margin-right:100px;"><strong>Toplam Tutar :  </strong> @totalBill</span>

                        </td>

                    </tr>

                </tbody>

            </table>

        </div>

    }


</div>

@*Adım 2*@



<div class="modal fade" id="newOrderModal">

    <div class="modal-dialog modal-lg" style=" width: 900px !important;">

        <div class="modal-content">

            <div class="modal-header">

                <a href="#" class="close" data-dismiss="modal">&times;</a>

                <h4>Yeni Fatura Girişi</h4>

            </div>

            <form id="NewOrderForm">

                <div class="modal-body">

                    @*Fatura Detayları*@

                    <h5 style="color:#ff6347">Fatura Detayları</h5>

                    <hr />
                    <div class="form-horizontal">
                        <input type="hidden" id="FaturaID" name="FaturaID" /> <!-- name özelliği eklendi -->

                        <div class="form-group">
                            <div class="row mb-2">
                                <label for="FaturaSeriNo" class="control-label col-md-2">Seri No</label>
                                <div class="col-md-4">
                                    <input type="text" id="FaturaSeriNo" name="FaturaSeriNo" placeholder="Seri Numarası" class="form-control" />
                                </div>

                                <label for="FaturaSiraNo" class="control-label col-md-2">Sıra No</label>
                                <div class="col-md-4">
                                    <input type="text" id="FaturaSiraNo" name="FaturaSiraNo" placeholder="Sıra Numarası" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-2">
                                <label for="FaturaTarih" class="control-label col-md-2">Tarih</label>
                                <div class="col-md-4">
                                    <input type="date" id="FaturaTarih" name="FaturaTarih" placeholder="Tarih" class="form-control" />
                                </div>

                                <label for="Saat" class="control-label col-md-2">Saat</label>
                                <div class="col-md-4">
                                    <input type="time" id="Saat" name="Saat" placeholder="Saat" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-2">
                                <label for="VergiDairesi" class="control-label col-md-2">Vergi Dairesi</label>
                                <div class="col-md-4">
                                    <input type="text" id="VergiDairesi" name="VergiDairesi" placeholder="Vergi Dairesi" class="form-control" />
                                </div>

                                <label for="Toplam" class="control-label col-md-2">Toplam Tutar</label>
                                <div class="col-md-4">
                                    <input type="text" id="Toplam" name="Toplam" placeholder="Toplam Tutar" class="form-control" />
                                </div>
                            </div>


                            <div class="row mb-2">
                                <label for="TeslimEden" class="control-label col-md-2">Teslim Eden</label>
                                <div class="col-md-4">
                                    <input type="text" id="TeslimEden" name="TeslimEden" placeholder="Teslim Eden" class="form-control" />
                                </div>

                                <label for="TeslimAlan" class="control-label col-md-2">Teslim Alan</label>
                                <div class="col-md-4">
                                    <input type="text" id="TeslimAlan" name="TeslimAlan" placeholder="Teslim Alan" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>






                    @*Fatura kalemleri@*@

                    <h5 style="margin-top:10px;color:#ff6347">Fatura Kalemleri</h5>

                    <hr />

                    <div class="form-horizontal">

                        <input type="hidden" id="FaturaKalemID" />

                        <div class="row mb-2">
                            <label for="Aciklama" class="control-label col-md-2">Açıklama/Ürün</label>
                            <div class="col-md-4">
                                <input type="text" id="Aciklama" name="Aciklama" placeholder="Açıklama" class="form-control" />
                            </div>

                            <label for="Miktar" class="control-label col-md-2">Miktar</label>
                            <div class="col-md-4">
                                <input type="number" id="Miktar" name="Miktar" placeholder="Miktar" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-2">
                            <label for="BirimFiyat" class="control-label col-md-2">Birim Fiyat</label>
                            <div class="col-md-4">
                                <input type="text" id="BirimFiyat" name="BirimFiyat" placeholder="Birim Fiyat" class="form-control" />
                            </div>
                        </div>



                        <div class="form-group">


                            <div class="col-md-2 col-lg-offset-4">

                                <a id="addToList" class="btn btn-primary">Listeye Ekle</a>

                            </div>

                        </div>



                        <table id="detailsTable" class="table">

                            <thead>

                                <tr>

                                    <th style="width:30%">Açıklama</th>

                                    <th style="width:20%">Miktar</th>

                                    <th style="width:15%">Birim Fiyat</th>

                                    <th style="width:25%">Tutar</th>

                                    <th style="width:10%"></th>

                                </tr>

                            </thead>

                            <tbody></tbody>

                        </table>

                    </div>

                </div>

                <div class="modal-footer">

                    <button type="reset" class="btn btn-default" data-bs-dismiss="modal">Kapat</button>

                    <button id="saveOrder" type="submit" class="btn btn-danger">Kaydet</button>

                </div>

            </form>

        </div>

    </div>

</div>

@*Adım 3*@

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<script>

    //Show Modal.

    function addNewOrder() {

        $("#newOrderModal").modal();

    }

    //Add Multiple Order.


    $("#addToList").click(function (e) {

        e.preventDefault();



        if ($.trim($("#Aciklama").val()) == "" || $.trim($("#BirimFiyat").val()) == "" || $.trim($("#Miktar").val()) == "") return;



        var Aciklama = $("#Aciklama").val(),

            BirimFiyat = $("#BirimFiyat").val(),

            Miktar = $("#Miktar").val(),

            detailsTableBody = $("#detailsTable tbody");



        var productItem = '<tr><td>' + Aciklama + '</td><td>' + Miktar + '</td><td>' + BirimFiyat + '</td><td>' + (parseFloat(BirimFiyat) * parseInt(Miktar)) + '</td><td><a data-itemId="0" href="#" class="deleteItem">Kaldır</a></td></tr>';

        detailsTableBody.append(productItem);

        clearItem();

    });

    //After Add A New Order In The List, Clear Clean The Form For Add More Order.

    function clearItem() {

        $("#Aciklama").val('');

        $("#BirimFiyat").val('');

        $("#Miktar").val('');

    }

    // After Add A New Order In The List, If You Want, You Can Remove It.

    $(document).on('click', 'a.deleteItem', function (e) {

        e.preventDefault();

        var $self = $(this);

        if ($(this).attr('data-itemId') == "0") {

            $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {

                $(this).remove();

            });

        }

    });

    //After Click Save Button Pass All Data View To Controller For Save Database

    function saveOrder(data) {

        return $.ajax({

            contentType: 'application/json; charset=utf-8',

            dataType: 'json',

            type: 'POST',

            url: "/Fatura/faturaKaydet",

            data: data,

            success: function (result) {

                alert(result);

                location.reload();

            },

            error: function () {

                alert("Error!")

            }

        });

    }

    //Collect Multiple Order List For Pass To Controller

    $("#saveOrder").click(function (e) {

        e.preventDefault();



        var orderArr = [];

        orderArr.length = 0;



        $.each($("#detailsTable tbody tr"), function () {

            orderArr.push({

                Aciklama: $(this).find('td:eq(0)').html(),

                Miktar: $(this).find('td:eq(1)').html(),

                BirimFiyat: $(this).find('td:eq(2)').html(),

                Tutar: $(this).find('td:eq(3)').html()

            });

        });





        var data = JSON.stringify({

            FaturaSeriNo: $("#FaturaSeriNo").val(),

            FaturaSiraNo: $("#FaturaSiraNo").val(),

            FaturaTarih: $("#FaturaTarih").val(),

            VergiDairesi: $("#VergiDairesi").val(),

            Saat: $("#Saat").val(),

            TeslimEden: $("#TeslimEden").val(),

            TeslimAlan: $("#TeslimAlan").val(),

            Toplam: $("#Toplam").val(),

            kalemler: orderArr

        });



        $.when(saveOrder(data)).then(function (response) {

            console.log(response);

        }).fail(function (err) {

            console.log(err);

        });

    });

</script>
