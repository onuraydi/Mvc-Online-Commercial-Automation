@model MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori

@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.7.0.js"></script>

<br/>
<h2 style="margin-left:20px">Yeni Kategori Ekleme</h2> 
<br/>

<form class="form-group"method="post" style="margin-left:20px">
    @Html.Label("Kategori Adı:")
    @Html.TextBoxFor(x => x.KategoriAd,new {@class ="form-control"})
    <br />
    <button class="btn btn-success" id="kategoriEkle">Ekle</button>
    <script>
        $('#kategoriEkle').click(function () {
            alert("Kategori başarılı bir şekilde eklendi")
        });
    </script>
</form>