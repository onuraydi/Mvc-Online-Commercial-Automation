@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "Personel Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="margin-left:20px">Personel Güncelleme</h2>
<br />

@using (Html.BeginForm("personelGuncelle", "Personel", FormMethod.Post, new {enctype = "multipart/form-data", style="margin-left:20px"}))
{
    <div class="form-group" >
        @Html.Label("Ad:")
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
        <br />
        @Html.Label("Soyad:")
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
        <br />
        @Html.Label("Departman:")
        @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.departman, new { @class = "form-control" })
        <br />
        @Html.Label("Telefon:")
        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
        <br />
        @Html.Label("Mail:")
        @Html.TextBoxFor(x => x.mail, new { @class = "form-control" })
        <br />
        @Html.Label("Adres:")
        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
        <br />
        @Html.Label("Hakkında:")
        @Html.TextBoxFor(x => x.Hakkinda, new { @class = "form-control" })
        <br />
        @Html.Label("Resim:")
        <input type="file" name="PersonelGorsel"/>
        @Html.HiddenFor(x => x.PersonelID)
    </div>
    <button class="btn btn-success" style="margin-left:20px">Güncelle</button>
}
