@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "Personel Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="margin-left:20px">Personel Ekleme</h2>
<br />

<form class="form-grop" method="post" style="margin-left:20px">
    @Html.Label("Ad:")
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
    <br />
    @Html.Label("Soyad:")
    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
    <br />
    @Html.Label("Departman:")
    @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.departman, new { @class = "form-control" })
    <br />
    @Html.Label("Telefon:")
    @Html.DropDownListFor(x => x.Telefon, (List<SelectListItem>)ViewBag.departman, new { @class = "form-control" })
    <br />
    @Html.Label("Mail:")
    @Html.DropDownListFor(x => x.mail, (List<SelectListItem>)ViewBag.departman, new { @class = "form-control" })
    <br />
    @Html.Label("Adres:")
    @Html.DropDownListFor(x => x.Adres, (List<SelectListItem>)ViewBag.departman, new { @class = "form-control" })
    <br />
    @Html.Label("Hakkında:")
    @Html.DropDownListFor(x => x.Hakkinda, (List<SelectListItem>)ViewBag.departman, new { @class = "form-control" })
    <br />
    @Html.Label("Resim:")
    @Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Ekle</button>
</form>



