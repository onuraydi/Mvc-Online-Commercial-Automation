@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.DepartmanPersonelSayi>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departmana Ait Personel Sayısı</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Durum</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int sira = 0;}
                @foreach (var departman in Model)
                {
                    sira = sira + 1;
                <tr>
                    <td>@sira.</td>
                    <td>@departman.DepartmanID</td>
                    <td>
                        <div class="progress progress-xs">
                            <div class="progress-bar progress-bar-danger" style="width: @departman.PersonelSayi%"></div>
                        </div>
                    </td>
                    <td><span class="badge bg-danger">@departman.PersonelSayi</span></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>